/* post-detail.wxss */
page{
  background-color: #f9f9f9;
}

swiper{
  width:100%;
  height:600rpx;
}

swiper image{
  width:100%;
  height:600rpx;
}

.product-name-price-remain-container{
  width: 100%;
  height: 180rpx;
  display: flex;
  flex-direction: row;
  background: #fff;
  margin-top: 20rpx;
  justify-content: space-between;
  align-items: center;
}

.product-name-price-container{
  display: flex;
  flex-direction: column;
  margin-left: 30rpx;
}

.product-name{
  font-size: 32rpx;
  color: #1F2D3D;
  margin-top: 16rpx;
}

.product-price{
  font-size: 28rpx;
  color: #FF4949;
  margin-right: 30rpx;
  vertical-align: middle;
}

.product-size{
  font-size: 26rpx;
  color: #1F2D3D;
  margin-top: 12rpx;
}

.product-remain{
  font-size: 26rpx;
  color: #1F2D3D;
}

.toptap-contaniner{
  display: flex;
  flex-direction: row;
  height: 160rpx;
  width: 100%;
  background: #fff;
  margin-top: 20rpx;
  justify-content: space-around;
}

.tapcell-container{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.tapcell-img{
  height: 80rpx;
  width: 80rpx;
  margin-top: 18rpx;
}

.tapcell-title{
  font-size: 24rpx;
  margin-top: 10rpx;
  color: #1F2D3D;
}

.product-detail-container{
  width: 100%;
  background: #fff;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
}

.detail {
  color: #1F2D3D;
  margin-left: 30rpx;
  margin-top: 20rpx;
  margin-right: 30rpx;
  line-height: 40rpx;
  letter-spacing: 1px;
  font-size: 28rpx;
  margin-bottom: 40rpx;
}

.detail-contaniner{
  display: flex;
  flex-direction: column;
  background: #fff;
  margin-top: 20rpx;
  width: 100%;
}

.bottom-container{
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: -1rpx;
}

.shoppingcar-container{
  display: flex;
  flex-direction: column;
  background: #fff;
  align-items: center;
  flex-grow: 1;
}

.add-shoppingcar-container{
  flex-grow: 1;
  background: #F7BA2A;
  display: flex;
  flex-direction: column;
  justify-content:center;
  align-items: center;
}

.buy-container{
  flex-grow: 1;
  background: #FF4949;
  display: flex;
  flex-direction: column;
  justify-content:center;
  align-items: center;
}

.bottom-title{
  font-size: 28rpx;
  color: #fff;
}

.shoppingcar-img{
  height: 50rpx;
  width: 50rpx;
  margin-top: 28rpx;
}
