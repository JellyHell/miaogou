/* about-us.wxss */

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #fff;
  justify-content: center;
  height: 450rpx;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin-top: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #1f2d3d;
  margin-top: 30rpx;
  font-size: 28rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  line-height: 34rpx;
}

.manager-list-container {
  display: flex;
  flex-direction: column;
  margin-top: 30rpx;
}

.manager-cell {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 100rpx;
  background: #fff;
  justify-content: space-between;
  align-items: center;
}

.manager-img {
  width: 60rpx;
  height: 60rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  vertical-align: middle;
}

.manager-img-order {
  width: 55rpx;
  height: 55rpx;
  margin-left: 24rpx;
  margin-right: 20rpx;
  vertical-align: middle;
}

.manager-title {
  font-size: 28rpx;
  color: #1f2d3d;
}

.horital-line {
  width: 100%;
  height: 1px;
}

.manager-title-right {
  font-size: 26rpx;
  color: #666;
  margin-right: 20rpx;
}

.desc{
  color: #666;
  margin-top: 30rpx;
  font-size: 27rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  line-height: 36rpx;
  letter-spacing: 1px;
}

.arror {
  width: 35rpx;
  height: 35rpx;
  margin-right: 20rpx;
}

.manager-img-tel {
  width: 68rpx;
  height: 68rpx;
  margin-left: 14rpx;
  margin-right: 14rpx;
  vertical-align: middle;
}

page {
  background-color: #f9f9f9;
}
