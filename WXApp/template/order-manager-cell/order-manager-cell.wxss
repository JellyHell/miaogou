@import "../single-orderproduct-template/single-orderproduct-template.wxss";
@import "../multi-orderproduct-template/multi-orderproduct-template.wxss";

.order-manager-cell-container{
  background: #fff;
  display: flex;
  flex-direction: column;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
  border-radius: 10rpx;
}

.header-container{
  height: 80rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.headet-title{
  font-size: 26rpx;
  color: #1F2D3D;
  margin-left: 30rpx;
}

.headet-state{
  font-size: 24rpx;
  color: #1F2D3D;
  margin-right: 30rpx;
}

.product-info-container{
  width: 100%;
  background: #F9FAFC;
}

.order-info{
  font-size: 24rpx;
  color: #1F2D3D;
  align-self: flex-end;
  margin-right: 30rpx;
  margin-top: 25rpx;
}

.devider-linner{
  width: 100%;
  height: 1px;
  margin-top: 25rpx;
  background: #f9f9f9;
}

.order-manager-bt-container{
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  flex-direction: row-reverse;
}


.dopay-container{
  width: 140rpx;
  height: 50rpx;
  display: flex;
  margin-right: 30rpx;
  border-radius: 8rpx;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: 0.7px solid #FF4949;
}