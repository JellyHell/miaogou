	<!-- 验证登录过滤器 -->
	<filter>
		<filter-name>CheckLoginFilter</filter-name>
		<filter-class>com.miaogou.filter.CheckLoginFilter</filter-class>
		<init-param>    
			<param-name>excludedPages</param-name>    
			<param-value>.js,.htm,.html,.css,.jpg,.png,.gif,.json,.woff,.woff2,/SystemBack/loginin</param-value>    
		</init-param> 
	</filter>
	<filter-mapping>
		<filter-name>CheckLoginFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
